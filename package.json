{
  "author": "SÃ¶nke Kluth <soenke.kluth@gmail.com> (http://soenkekluth.com/)",
  "bugs": {
    "url": "https://github.com/soenkekluth/micromitter/issues"
  },
  "description": "minimal tiny and performant event emitter / dispatcher",
  "devDependencies": {
    "ava": "^0.24.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "gzip-size-cli": "^2.0.0",
    "lerna": "^2.0.0",
    "livereload": "^0.6.2",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.53.3",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-watch": "^4.3.1",
    "serve": "^6.0.6",
    "standard-version": "^4.2.0",
    "strip-json-comments-cli": "^1.0.1",
    "uglify-js": "^3.0.27"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/soenkekluth/micromitter#readme",
  "jsnext:main": "dist/micromitter.es.js",
  "keywords": [
    "kb",
    "lightweight",
    "light",
    "tiny",
    "small",
    "mini",
    "minimal",
    "micro",
    "event",
    "events",
    "dispatch",
    "emit",
    "emitter",
    "dispatcher",
    "eventdispatcher"
  ],
  "license": "MIT",
  "main": "dist/micromitter.js",
  "module": "dist/micromitter.es.js",
  "name": "micromitter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soenkekluth/micromitter.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production yarn run clear && yarn run rollup && yarn run minify:cjs && yarn run minify:umd && yarn run size",
    "bump": "standard-version",
    "clear": "rimraf dist",
    "dev": "run-p watch livereload serve",
    "docs": "documentation readme src/index.js --section API -q",
    "fix": "eslint --fix src",
    "lint": "eslint src test",
    "livereload": "livereload example",
    "minify:cjs": "uglifyjs $npm_package_main -cm --toplevel --source-map -o $npm_package_main",
    "minify:umd": "uglifyjs dist/micromitter.umd.js -cm --source-map -o dist/micromitter.umd.js",
    "pretest": "yarn build",
    "release": "yarn run build -s && yarn run bump && git push --follow-tags origin master && npm publish",
    "rollup": "rollup -c",
    "serve": "serve --cors --cache 100 --open --clipless",
    "size": "echo \"Gzipped Size: $(strip-json-comments --no-whitespace dist/micromitter.es.js | gzip-size)\"",
    "test": "ava -v",
    "watch": "rollup -c --watch"
  },
  "umd:main": "dist/micromitter.umd.js",
  "version": "1.0.2"
}
